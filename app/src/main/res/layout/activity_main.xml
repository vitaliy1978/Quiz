<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background3"
    tools:context=".MainActivity">

   <!-- <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_background2" />  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buttonOption"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_stroke_black95_press_white"
            android:text="?"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:layout_gravity="right"
            />

        <ImageView
            android:id="@+id/main_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="40"
            android:layout_marginBottom="0dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/main_img_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="@color/dark_blue"
                android:text="@string/head_name" />
            <TextView
                android:id="@+id/head_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="40sp"
                android:textStyle="italic"
                android:textColor="@color/dark_blue"
                android:text="@string/head_name2" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:padding="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/startLayout"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_stroke_black95_press_white"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="@string/start"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:textColor="@color/dark_blue"
                android:textSize="26sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>