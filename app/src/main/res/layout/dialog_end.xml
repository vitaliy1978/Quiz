<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_fon"
    android:background="@color/light_background"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_close"
            android:text="X"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@drawable/button_stroke_black95_press_white"
            android:layout_gravity="end"
            />
        <ImageView
            android:id="@+id/preview_img_viktory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="64"
            android:src="@drawable/main_img_viktory" />
        <ImageView
            android:id="@+id/main_img_lose"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="64"
            android:visibility="gone"
            android:src="@drawable/main_img_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/text_description_end"
                android:text="@string/leveloneEnd"
                android:layout_marginTop="20dp"
                android:gravity="top|center_horizontal"
                android:textColor="@color/black95"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_weight="30"
                android:textSize="22sp"
                android:lineSpacingExtra="4dp"
                />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_continue_next"
            android:background="@drawable/button_stroke_black95_press_white"
            android:text="@string/text_continue_next"
            android:textColor="@color/black95"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAllCaps="true"
            android:layout_weight="6"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>