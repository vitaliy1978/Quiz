<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_fon"
    android:background="@color/main_background3"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_close"
            android:text="X"
            android:textStyle="bold"
            android:textSize="19sp"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:background="@drawable/button_stroke_black95_press_white"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:layout_gravity="end"
            />
        <ImageView
            android:id="@+id/preview_img_viktory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="64"
            android:src="@drawable/main_img_viktory" />
        <ImageView
            android:id="@+id/main_img_lose"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="64"
            android:visibility="gone"
            android:src="@drawable/main_img" />

        <TextView
            android:id="@+id/text_description_end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="30"
            android:fontFamily="sans-serif"
            android:gravity="top|center_horizontal"
            android:lineSpacingExtra="4dp"
            android:text="@string/leveloneEnd"
            android:textColor="@color/dark_blue"
            android:textSize="20sp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btn_continue_next"
            android:background="@drawable/button_stroke_black95_press_white"
            android:text="@string/text_continue_next"
            android:textColor="@color/dark_blue"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textAllCaps="true"
            android:layout_weight="6"
            android:textSize="22sp"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>